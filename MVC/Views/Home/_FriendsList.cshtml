@using Common.Models;

@model ICollection<User>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            Friendlist
        </h3>
    </div>
    <div class="panel-body">
        @if (Model.Any())
        {
            <div class="table">
                <table class="table vert-align">
                    <tr>
                        <th class="col-md-6 col-xs-8">
                            Name
                        </th>
                        <th class="col-md-6 col-xs-4 text-right">
                        </th>
                    </tr>
                    @foreach (var f in Model)
                    {
                        <tr>
                            <td class="col-md-6 col-xs-8">
                                @f.FirstName @f.LastName
                            </td>
                            <td class="col-md-6 col-xs-4">
                                <a class="btn btn-raised btn-info" href="#">Info</a>
                                <a class="btn btn-raised btn-info" href="#">Message</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <p>You have no friends</p>
        }
        <div class="row">
            <div class="col-md-12">
                @Html.ActionLink("Add Friends", "Index", new { controller = "Friend" }, new { @class = "btn btn-raised btn-info" })
            </div>
        </div>
    </div>
</div>
