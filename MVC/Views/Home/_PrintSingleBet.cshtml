@using Common.Models;

@model Bet

<div class="row" align="left">
    <div class="col-md-12">
        <p class="lead">
            <label type="label" class="btn btn-default" aria-label="Left Align" data-toggle="tooltip" title="Joined">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            </label>
            @Model.Name
            
            @if (Model.Judge.Username == User.Identity.Name)
            {
                <a class="btn btn-primary pull-right" href="/Bet/Conclude/@Model.BetId">Conclude</a>
            }

            <!-- TODO: Only show when logged in user is owner of shown bet -->
            @if (Model.Owner.Username == User.Identity.Name)
            {
                <a class="btn btn-primary pull-right" href="/Bet/Remove/@Model.Lobby.LobbyId/@Model.BetId">Remove</a>
            }
            <label type="label" class="btn btn-default pull-right" aria-label="Left Align" data-toggle="tooltip" title="Entry fee @Model.BuyIn">
                @Model.BuyIn
            </label>
            <label type="label" class="btn btn-default pull-right" aria-label="Left Align" data-toggle="tooltip" title="Bet ends @Model.StopDate">
                <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
            </label>           
        </p>
    </div>
</div>
