@using MVC.ViewModels;

@{
    ViewData["Title"] = "Profile";
}

@model UserProfileViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
        </div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Brugeroplysninger
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                         <div class="col-md-6" >
                             <p style="text-align: left; font-size: 20px">
                                    <b>Firstname</b>
                             <span style="float: right; font-size: 18px ">@Html.DisplayFor(m => m.FirstName)</span>
                                 <p />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p style="text-align: left; font-size: 20px">
                                <b>Lastname</b>
                                <span style="float: right; font-size: 18px ">@Html.DisplayFor(m => m.LastName)</span>
                            <p />
                        </div>
                </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p style="text-align: left; font-size: 20px">
                                <b>Email</b>
                                <span style="float: right; font-size: 18px">@Html.DisplayFor(m => m.Email)</span>
                            <p />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p style="text-align: left; font-size: 20px">
                                <b>Username</b>
                            <span style="float: right; font-size: 18px">@Html.DisplayFor(m => m.UserName)</span>
                            <p />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p style="text-align: left; font-size: 20px">
                                <b>Balance</b>
                            <span style="float: right; font-size: 18px">@Html.DisplayFor(m => m.Balance)</span>
                            <p />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p style="text-align: left; font-size: 20px">
                                <b>Friends</b>
                            <p />
                        </div>
                    </div>

                    @if (Model.Friendlist.Any())
                    {
                        foreach (var f in Model.Friendlist)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>
                                        @f.FirstName @f.LastName
                                    </h4>
                                </div>
                                <div class="col-md-6 text-md-right text-sm-left">
                                    <a class="btn  btn-raised btn-primary" href="#">Info</a>
                                    <a class="btn btn-raised btn-primary" href="#">messages</a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>You have no Friendss</p>
                    }
                        <div class="row">
                            <div class="col-md-12">
                               @Html.ActionLink("Edit", "EditProfile", "User", new {@class="btn btn-raised btn-primary pull-right"})
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
