@using MVC.ViewModels;

@{
    ViewData["Title"] = "Create Lobby";
}

@model CreateLobbyViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h1 class="panel-title">
                        Create lobby
                    </h1>
                </div>
                <div class="panel-body">
                @using (Html.BeginForm("Create", "Lobby", FormMethod.Post, new { @id = "CreateLobbyForm" }))
                {
                    <div class="form-group label-floating">
                        @Html.LabelFor(m => m.Name, new {@class = "control-label"})
                        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div>
                        <button type="submit" value="post" name="action:post" class="btn btn-raised btn-primary pull-right">
                            Create lobby
                        </button>
                        <button type="reset" class="btn btn-raised pull-left">
                            Cancel
                        </button>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
            $("#CreateLobbyForm").validate({
                rules: {
                    Name: {
                        required: true
                    }
                },

                messages: {
                    Name: {
                        required: "@Resources.Lobby.ErrorLobbyNameRequired"
                    }
                },

                submitHandler: function (form) {
                    form.submit();
                }
            });

            findErrorTags();
        });
    </script>
}
