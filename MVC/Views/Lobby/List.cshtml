@using MVC.ViewModels;

@{
    ViewData["Title"] = "LobbyPage";
}

@model LobbiesViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>All lobbies</h1>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Joined lobbies
                    </h3>
                </div>
                <div class="panel-body">
                    @foreach (var l in Model.MemberOfLobbies)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <a href="/Lobby/Show/@l.LobbyId">
                                    <h4>@l.Name</h4>
                                </a>
                            </div>
                            <div class="col-md-6 text-md-right text-sm-left">

                                <a class="btn btn-raised btn-info" href="/Lobby/Show/@l.LobbyId">View</a>
                            </div>
                        </div>
                        <hr />
                    }
                   <br />
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Lobby invites
                    </h3>
                </div>
                <div class="panel-body">
                    @if (Model.InvitedToLobbies.Any())
                    {
                        foreach (var l in Model.InvitedToLobbies)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>
                                        @l.Name
                                    </h4>
                                </div>
                                <div class="col-md-6 text-md-right text-sm-left">
                                    <a class="btn btn-raised btn-info" href="/Lobby/Accept/@l.LobbyId">Accept</a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p><b>You have no lobby invites</b></p>
                    }
                    <div class="panel-body">
                        <div class="row" align="left">
                            <a class="btn btn-raised btn-info" href="/Lobby/Create">Create new lobby</a>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>

</div>
