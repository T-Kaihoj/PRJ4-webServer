@using MVC.ViewModels;

@{
    ViewData["Title"] = "LobbyPage";
}

@model LobbiesViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="header">
                All lobbies
            </h1>
            <h3>Joined lobbies</h3>
            @foreach (var l in Model.MemberOfLobbies)
            {
                <div class="row">
                    <div class="col-md-6">
                        <h4>
                            @l.Name
                        </h4>
                    </div>
                    <div class="col-md-6 text-md-right text-sm-left">
                        <a class="btn btn-primary" href="#">Info</a>
                        <a class="btn btn-primary" href="/Lobby/Show/@l.LobbyId">View</a>
                    </div>
                </div>
            }
            @if (Model.InvitedToLobbies.Any())
            {
                <hr /><br/>
                <h3>Lobby invites</h3>
                foreach (var l in Model.InvitedToLobbies)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <h4>
                                @l.Name
                            </h4>
                        </div>
                        <div class="col-md-6 text-md-right text-sm-left">
                            <a class="btn btn-primary" href="#">Info</a>
                            <a class="btn btn-primary" href="/Lobby/Accept/@l.LobbyId">Accept</a>
                        </div>
                    </div>
                }
            }
                <div class="row" align="left">
                    <a class="btn btn-primary" href="/Lobby/Create">Create new lobby</a>
                </div>
            
        </div>
    </div>
</div>