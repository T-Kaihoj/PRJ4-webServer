@using MVC.Models.Userlogic
@using MVC.ViewModels;

@{
    ViewData["Title"] = "LobbyPage";
}

@model LobbyViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="header">
                @Html.DisplayFor(m => m.Name)
            </h1>

            @foreach (var b in Model.Bets)
            {
                <div class="row" align="left">
                    <p class="lead">
                        <label type="label" class="btn btn-default" aria-label="Left Align" data-toggle="tooltip" title="Joined">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </label>
                        @b.Name

                       @if (b.Judge.Username == User.Identity.Name)
                       {
                           <a class="btn btn-primary pull-right" href="/Bet/Conclude/@b.BetId">Conclude</a>
                       }
                        <a class="btn btn-primary pull-right" href="/Bet/Join/@b.BetId">Join Bet</a>

                        @if (b.Owner.Username == User.Identity.Name)
                        {
                            if (b.StartDate < DateTime.Now)
                            {
                                <a class="btn btn-primary pull-right disabled" data-toggle="tooltip" title="Bet is already in progress" href="#">Remove</a>
                            }
                            else
                            {
                                <a class="btn btn-primary pull-right" href="/Bet/Remove/@b.Lobby.LobbyId/@b.BetId">Remove</a>
                            }
                        }
                        <label type="label" class="btn btn-default pull-right" aria-label="Left Align" data-toggle="tooltip" title="Entry fee @b.BuyIn">
                            @b.BuyIn
                        </label>
                        @{
                            DateTime current = DateTime.Now;
                            DateTime betEndTime = b.StopDate;
                            TimeSpan span = betEndTime.Subtract(current);
                            string hours = (span.Hours > 9) ? span.Hours.ToString() : "0" + span.Hours;
                            string minutes = (span.Minutes > 9) ? span.Minutes.ToString() : "0" + span.Minutes;
                            string seconds = (span.Seconds > 9) ? span.Seconds.ToString() : "0" + span.Seconds;
                        }
                        <label type="label" class="btn btn-default pull-right" aria-label="Left Align" data-toggle="tooltip" title="@span.Days day(s) @hours:@minutes:@seconds left">
                            <span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span>
                        </label>
                    </p>
                </div>
            }
            <p class="lead">
                <a href="/Bet/Create/@Model.ID" class="btn btn-primary pull-left">Create new bet</a>
                <a href="/Lobby/Leave/@Model.ID" class="btn btn-primary pull-right">Leave Lobby</a>
            </p>
            <div class="row">
                @Html.Partial("Invite", new InviteToLobbyViewModel() {Id = Model.ID, Username = ""})
            </div>
            <div class="row">
                <div col="6">
                    <h3>Users in lobby</h3>
                    @Html.Partial("_PrintUserList", Model.Participants.Select(x => x.Username).ToList())
                </div>
            </div>
            <div class="row">
                <div col="6">
                    <h3>Invited users</h3>
                    @Html.Partial("_PrintUserList", Model.InvitedUsers.Select(x => x.Username).ToList())
                </div>
        </div>
    </div>
</div>