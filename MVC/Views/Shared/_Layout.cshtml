<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocalBet</title>
    @Scripts.Render("~/bundles/js-essential")
    @Styles.Render("~/bundles/css-libs")
    @Styles.Render("~/bundles/css-site")
</head>
<body>
    <div class="container">
        <div class="navbar navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">LocalBet</a>
                </div>
                <div class="navbar-collapse collapse navbar-responsive-collapse">
                    <h4 class="navbar-text">You Bet It's Fun!</h4>
                    @if (User.Identity.IsAuthenticated)
                    {
                        Html.RenderPartial("MenuBox");
                        Html.RenderPartial("UserBox");
                    }
                    else
                    {
                        Html.RenderPartial("LoginBox");
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/js-libs")
    @Scripts.Render("~/bundles/js-site")
    @RenderSection("scripts", required: false)
</body>
</html>
