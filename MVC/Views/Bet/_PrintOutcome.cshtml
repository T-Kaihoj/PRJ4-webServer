@model MVC.ViewModels.PrintOutcomeViewModel

@{
    string styleBackground = "";
    string stylePull = "text-md-right";

    if (Model.Loser)
    {
        styleBackground = "background: linear-gradient(to right, rgba(240,128,128,0), rgba(240,128,128,1))";
    }
    else if (Model.Winner)
    {
        styleBackground = "background: linear-gradient(to right, rgba(144,238,144,0), rgba(144,238,144,1))";
    }

    if (Model.Left)
    {
        stylePull = "pull-left";
    }
}

<div class="col-md-5" style="@styleBackground">
    <h2 class="@stylePull">
        <b>
            @Model.Name
        </b>
    </h2>
    @Html.Partial("_PrintUserList", Model.Participants)
</div>
